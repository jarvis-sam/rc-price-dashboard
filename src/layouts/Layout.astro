---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Royal Caribbean Icon of the Seas - Price Tracker Dashboard" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Track prices and find the best deals for Royal Caribbean cruises" />
    <meta property="og:type" content="website" />
    
    <!-- Preconnect for fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="bg-animated min-h-screen">
    <!-- Floating particles background -->
    <div class="particles" aria-hidden="true">
      {Array.from({ length: 20 }).map((_, i) => (
        <div 
          class="particle" 
          style={`left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 15}s; animation-duration: ${15 + Math.random() * 10}s;`}
        />
      ))}
    </div>
    
    <!-- Main content -->
    <div class="relative z-10">
      <slot />
    </div>
    
    <!-- Footer -->
    <footer class="relative z-10 mt-20 py-8 border-t border-white/10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-sm text-gray-500">
            üö¢ RC Price Dashboard ‚Ä¢ Updated daily ‚Ä¢ Not affiliated with Royal Caribbean
          </p>
          <p class="text-sm text-gray-600">
            Built with ‚ù§Ô∏è by Jarvis
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
